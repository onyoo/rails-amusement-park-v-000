<p>Name: <%= @attraction.name %></p>
<p>Tickets Needed: <%= @attraction.name %></p>
<p>Height Requirement: <%= @attraction.min_height %></p>
<p>Nausea Rating: <%= @attraction.nausea_rating %></p>
<p>Happiness Boosting: <%= @attraction.happiness_rating %></p>


<%= form_for @ride, url: url_for( controller: 'rides', action: 'create', method: 'post' ) do |f| %>
  <%= f.hidden_field(:user_id, value: @user.id) %>
  <%= f.hidden_field(:attraction_id, value: @attraction.id) %>
  <%= f.submit "Go on this ride" %>
<% end %>

<% if @user.admin? %>
  <%= link_to "Edit Attraction", edit_attraction_path(@attraction) %>
<% end %>